	    });

	    var treeModel = new dijit.tree.ForestStoreModel({
		store: store,
		query: {"type": "root"},
		rootId: "root",
		rootLabel: "Knowledgeroot",
		childrenAttrs: ["children"]
	    });

	    new dijit.Tree({
		model: treeModel,
		showRoot: false,
		persist: true,
		onClick: function(item){
		    // Get the URL from the item, and navigate to it
		    location.href = 'content/move/<?= $this->contentid ?>/to/' + item.id;
		}
	    }, "treeOne");
	});
    </script>

    <div id="treeOne"></div>
</div>

